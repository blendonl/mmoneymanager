{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~*": [
        "./src/*"
      ],
      "~test/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/.*.scaffold.ts",
    "**/.scaffold.ts",
    "**/.scaffold/*",
    "packages",
    "src/common/logger/pino",
    "src/common/logger/otel",
    "src/common/logger/sentry",
    "src/common/email/providers/aws-ses",
    "src/common/queues/providers/pg-boss",
    "src/common/media/providers/aws-s3",
    "src/common/authn/providers/auth0",
    "src/common/authn/providers/google",
    "src/common/authn/session",
    "src/common/kvstore"
  ]
}
